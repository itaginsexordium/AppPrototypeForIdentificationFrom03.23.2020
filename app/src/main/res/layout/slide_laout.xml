<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="wrap_content"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="-3dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="108dp"
        android:textAlignment="center"
        android:text="заголовок"
        android:textColor="@color/backgroundLogo"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/slide_image"
        tools:layout_editor_absoluteX="206dp" />

    <TextView
        android:id="@+id/slide_decs"
        android:layout_width="394dp"
        android:layout_height="450dp"
        android:layout_alignStart="@+id/slide_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="54dp"
        android:scrollbars="vertical"
        android:text="информация"
        android:textAlignment="center"
        android:textColor="@color/backgroundLogo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/slide_image"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/slide_image"
        app:layout_constraintTop_toBottomOf="@+id/slide_image" />
</RelativeLayout>