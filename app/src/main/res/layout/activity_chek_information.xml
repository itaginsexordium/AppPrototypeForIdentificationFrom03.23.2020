<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChekInformation"
    android:background="@drawable/background">

    <View
        android:id="@+id/view"
        android:layout_width="399dp"
        android:layout_height="628dp"
        android:background="@color/dots"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="367dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/backgroundLogo"
        android:text="Проверка кошелька"
        android:textColor="#385E17"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Проверка данных"

        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="305dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="Заполните анкету и нажмите продолжить. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="303dp"
        android:layout_height="41dp"
        android:textColor="#E31434"
        android:text=" *
Заполнение анкеты доступно только на русском языке."
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:background="@color/dots"
        android:text="Шаг2"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/myview" />


    <ScrollView
        android:id="@+id/myview"


        android:layout_width="394dp"
        android:layout_height="442dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView5">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/number_indefication_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Номер индификационной карты"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/date_give_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"

            android:hint="дата выдачи индентификационной карты"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/end_of_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="дата окончания срока действия индентификационной карты"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/MKK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="Орган выдачи"
            android:inputType="textPersonName"
            android:text="" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Личные данные"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/familyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="Фамилия"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="Имя"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/secondName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="Отчество"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/dateBorn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="дата рождения"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/bornPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="место рождения"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Прописка"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="город/нас пункт"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="область"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="улица"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/house_and_apartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:ems="10"
            android:hint="дом,квартира"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загрузите фото удостоверения личности"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="лицевая сторона"
            android:textColor="@color/colorPrimaryDark" />

        <ImageButton
            android:id="@+id/firstImageButton"
            android:layout_width="143dp"
            android:layout_height="45dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обратная сторона"
            android:textColor="@color/colorPrimaryDark" />

        <ImageButton
            android:id="@+id/secondImageButton"
            android:layout_width="143dp"
            android:layout_height="49dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />


    </LinearLayout>
    </ScrollView>

    <Button
        android:onClick="nexButton"
        android:id="@+id/btnNext"
        android:layout_width="128dp"
        android:layout_height="39dp"
        android:background="@color/backgroundLogo"
        android:text="продолжить"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/myview" />

    <TextView
        android:id="@+id/aletrText"
        android:layout_width="119dp"
        android:layout_height="22dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/btnNext"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <ProgressBar
        android:id="@+id/mProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="167dp"
        android:layout_height="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/aletrText"
        app:layout_constraintEnd_toStartOf="@+id/textView9" />


</androidx.constraintlayout.widget.ConstraintLayout>